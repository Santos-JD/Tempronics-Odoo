<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="trics_api_settings_view" model="ir.ui.view">
        <field name="name">tempronics.api.settings.view</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
            <div class="app_settings_block" data-string="Tempronics Api" string="Tempronics Api" data-key="tempronics_api" groups="">
                <h2> Tempronics Api </h2>
                <div class="row mt16 o_settings_container">
                    <div class="o_settings_left_pane">  
                        <field name="module_trics_api_mrp_produccion"/>
                        <field name="module_trics_api_mrp_produccion_url" class="o_light_label"/>
                    </div>                        

                </div>
            </div>
            </xpath>
        </field>
    </record>
</odoo>